    body
        //container taking full width
        .container-fluid
            //row containing all 3 columns of navigation
            .row
                //left column of navigation including 2 links for dashboard and users
                .col-3.bg-light.min-vh-100
                    //Other logo
                    .d-flex.justify-content-center.pt-4
                        a(href="/dashboard")
                          img(
                              src="/img/logo.svg"
                              alt="OTHer Logo"
                              class="img-fluid"
                              style="max-width:80%;"
                          )
                    .mt-3
                        nav.nav.flex-column.ms-3
                            a.nav-link.d-flex.align-items-center(href="/dashboard")
                                i.bi.bi-house-door-fill.me-2
                                span Startseite
                            a.nav-link.d-flex.align-items-center(href="/users")
                                i.bi.bi-people-fill.me-2
                                span Nutzer√ºbersicht

                //middle column of navigation currently a placeholder for later content
                .col-6
                    block content

                //right column of navigation is a static searchbar without function yet
                .col-3.bg-light.min-vh-100
                    .p-3
                        //searchbar
                        input.form-control(type="text", placeholder="Other suchen...")
