doctype html
html
    head
        meta(charset="utf-8")

        //For responsive representation
        meta(name="viewport" content="width=device-width, initial-scale=1")

        //Bootstrap 5 CSS include
        link(
            rel="stylesheet",
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css",
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM",
            crossorigin="anonymous"
        )


        //Bootstrap icons
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css")
        title OTHer

    body
        //Container taking full width
        .container-fluid
            //Row in bootstrap-grid holding the 3 main columns
            .row
                //Left column of navigation (25% of site) including 2 links for dashboard and users
                .col-3.bg-light.min-vh-100
                    //Other logo with padding to start
                    .d-flex.justify-content-start.ps-3.pt-4
                        a(href="/dashboard")
                            img.img-fluid(
                                src="/img/logo.svg"
                                alt="OTHer Logo"
                                height="2em"
                            )
                    .mt-3
                        //navigation bar including clickable links
                        nav.nav.flex-column.ms-3
                            a.nav-link.text-dark.d-flex.align-items-center(
                                href="/dashboard"
                                class= currentPath === "/dashboard" ? "text-dark fw-bold": "text-dark"
                            )
                                //House icon
                                i.bi.bi-house-door-fill.me-2
                                span Startseite
                            a.nav-link.text-dark.d-flex.align-items-center(
                                href="/users",
                                class= currentPath === "/users" ? "text-dark fw-bold": "text-dark"

                            )
                                //People icon
                                i.bi.bi-people-fill.me-2
                                span Nutzer

                //Middle column taking 50% of site with place holder of child elements
                .col-6
                    block content

                //Right column (25% width) containing searchbar
                .col-3.bg-light.min-vh-100
                    //Padding around 1rem
                    .p-3
                        //Input group for icon + input
                        .input-group
                            //Search icon (magnifying lens)
                            span.input-group-text.bg-white.border-end-0.rounded-start
                                i.bi.bi-search
                            //Searchbar input field
                            input.form-control.rounded-end(
                                type="text",
                                placeholder="Other suchen...",
                            )
